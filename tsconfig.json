{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // --- paths/alias for "@/..." -> "src/..."
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // TS strictness: keep useful checks but quiet noisy implicit-any in event handlers
    "strict": true,
    "noImplicitAny": false,

    // Next.js recommended
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["node", "react", "react-dom"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
